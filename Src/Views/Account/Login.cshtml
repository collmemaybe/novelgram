@{
    ViewData["Title"] = "Login";
}

<div style="margin: 30px;">
    <h2>Welcome to Novelgram!</h2>
    <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div>
            <p>
                <button type="submit" class="btn btn-default" name="provider" value="Google" title="Log in using your Google account">Log in with Google</button>
            </p>
        </div>
    </form>
</div>
